<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Image:
            stopnie:0
            id:img
            source: 'arrow.png'
            size: self.texture_size
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.stopnie
                    origin: self.center
            canvas.after:
                PopMatrix

        Label:
            id: KAT
            text: "0"
            font_size: 60

        BoxLayout:
            orientation: "horizontal"
            size: root.width, root.height

    
            Button:
                size_hint: (.5, .8)
                font_size: 32
                text: "LEWO"
                on_press: root.skret_lewo()

            Button:
                size_hint: (.5, .8)
                font_size: 32
                text: "PRAWO"
                on_press: root.skret_prawo()
